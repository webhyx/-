/* pages/songDetail/songDetail.wxss */
.songDetailContainer {
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 底座 */
 .circle {
   position: relative;
   z-index: 100;/* 层级 */
   width: 60rpx;
   height: 60rpx;
   border-radius: 50%;
   background-color: #fff;
   margin: 10rpx 0;
 }
/* 摇杆 */
.needle {
  /* 相对自身向右偏移60 */
  z-index: 99;
  position: relative;
  top: -40rpx;
  left: 60rpx;
  width: 192rpx;
  height: 274rpx;
  transform-origin: 40rpx 0;/* 旋转中心点 */
  transform: rotate(-20deg); 
  transition: transform 1s;/* 渐变 */
}
.needleRotate {
  transform: rotate(0deg);/* 后面覆盖前面 */
}

.discContainer {
  position: relative;
  top: -170rpx;
  width: 598rpx;
  height: 598rpx;
}

.discAnimation {
  animation: disc 4s linear infinite;/* 动画4s完成 无限循环*/
  animation-delay: 1s;/* 延后1s执行，使针落到圆盘再旋转 */
}
/* 
@keyframes : 设置动画帧
1. from to 适用于简单的动画，只有起始帧和结束帧 --直达
2. 百分比 多用于复杂的动画，动画不止两帧 --有 中转
*/
@keyframes disc {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
.disc {
  width: 598rpx;
  height: 598rpx;
}

.muisicImg {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;/* 水平垂直居中 */
  width: 370rpx;
  height: 370rpx;
  border-radius: 50%;
}
/* 进度条控制区域 */
.progressControl {
  position: absolute;
  bottom: 200rpx;
  width: 640rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}
.barControl {
  position: relative;
  width: 450rpx;
  height: 4rpx;
  background: rgba(0, 0, 0, 0.4);
  margin: auto;
}
.audio-currentTime-Bar {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  /* width: 100rpx; */
  height: 4rpx;
  background: red;
}
.audio-circle {
  position: absolute;
  right: -12rpx;
  top: -4rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #fff;
}
/* 底部控制区域 */
.musicControl {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 40rpx;
  border-top: 1rpx solid #fff;
  display: flex;
}
.musicControl text {
  width: 20%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  color: #fff;
  font-size: 50rpx;
}
.musicControl .big {
  font-size: 80rpx ;
}